		{
			System.out.println("Thank You" );
	    }
		else 
		{
		     System.out.println("Hello  " + P1 + " You are in  in the middle of an infinite grey swamp");
		     System.out.println( P1 + " ,please Choose Your Role");
		
			
		}
	}

}
