import java.util.Scanner;
public class Player {
 String P1;
	
   public void NameandRole() {
	System.out.println("Enter Your Name ");
	 do 
	 {
		 Scanner playername  = new Scanner(System.in);
	     P1 = playername.nextLine();
	     System.out.println("Hello  " + P1 + " You are in  in the middle of an infinite grey swamp");
	     System.out.println( P1 + " ,please Choose Your Role");
	} while (P1.equals("Exit"));
		
	}
   
}
